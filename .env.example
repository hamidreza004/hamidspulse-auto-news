# Telegram API credentials (get from https://my.telegram.org)
TELEGRAM_API_ID=your_api_id_here
TELEGRAM_API_HASH=your_api_hash_here
TELEGRAM_PHONE=+989123456789

# OpenAI API Key
OPENAI_API_KEY=your_openai_api_key_here
# Optional: Custom OpenAI-compatible API endpoint (defaults to https://api.openai.com/v1)
OPENAI_BASE_URL=https://api.intelligence.sotoon.ir/inference/v1

# Target channel username (without @)
TARGET_CHANNEL=hamidspulse

# Database path (optional, defaults to ./data/news.db)
DATABASE_PATH=./data/news.db

# Session file path (optional, defaults to ./secrets/telegram.session)
SESSION_PATH=./secrets/telegram.session

# Web UI configuration
WEB_HOST=0.0.0.0
WEB_PORT=8000

# Timezone for scheduling (Asia/Tehran or Asia/Muscat)
TIMEZONE=Asia/Tehran
